rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isAuth() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Posts
    match /posts/{postId} {
      allow read: if isAuth();
      allow create: if isAuth() && request.resource.data.authorId == request.auth.uid;
      allow update: if isAuth() && (
        isOwner(resource.data.authorId) ||
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likeCount', 'commentCount'])
      );
      allow delete: if isAuth() && isOwner(resource.data.authorId);

      match /likes/{likeId} {
        allow read: if isAuth();
        allow write: if isAuth() && likeId == request.auth.uid;
      }

      match /comments/{commentId} {
        allow read: if isAuth();
        allow create: if isAuth() && request.resource.data.authorId == request.auth.uid;
        allow delete: if isAuth() && isOwner(resource.data.authorId);
        allow update: if false;
      }
    }

    // Conversations (direct messages)
    match /conversations/{conversationId} {
      // resource is null when the document doesn't exist yet (e.g. first getDoc in
      // getOrCreateConversation). Allow that read so we can check before creating.
      // For existing docs, only participants can read.
      allow read: if isAuth() && (resource == null || request.auth.uid in resource.data.participantIds);
      // Only participants can update (e.g. lastMessage preview).
      allow update: if isAuth() && request.auth.uid in resource.data.participantIds;
      // Either participant can create the document (getOrCreateConversation).
      allow create: if isAuth() && request.auth.uid in request.resource.data.participantIds;

      match /messages/{messageId} {
        // Only participants can read messages.
        allow read: if isAuth()
          && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds;
        // Only participants can send, and the senderId must match the caller.
        allow create: if isAuth()
          && request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds
          && request.resource.data.senderId == request.auth.uid;
        // Messages are immutable.
        allow update, delete: if false;
      }
    }

    // Users
    match /users/{userId} {
      allow read: if isAuth();
      allow create: if isAuth() && isOwner(userId);
      // Owner can update anything; anyone can increment/decrement followerCount
      allow update: if isAuth() && (
        isOwner(userId) ||
        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['followerCount'])
      );
      allow delete: if isOwner(userId);

      // Notifications: owner has full access, any authed user can create
      match /notifications/{notifId} {
        allow read, write: if isOwner(userId);
        allow create: if isAuth();
      }

      // Following: only the owner manages who they follow
      match /following/{targetId} {
        allow read, write: if isOwner(userId);
      }

      // Followers: owner and the follower themselves can write (followerId == auth.uid)
      match /followers/{followerId} {
        allow read: if isAuth();
        allow write: if isAuth() && isOwner(followerId);
      }
    }
  }
}
